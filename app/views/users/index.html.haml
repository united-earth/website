%h1 Listing users

%table#users
  %thead
    %tr
      %th Username
      %th Email
      %th Firstname
      %th Lastname
      %th Newsletter
      %th Contributions

      %th
      %th
      %th

  %tbody
    - @users.each do |user|
      %tr
        %td= user.username
        %td= user.email
        %td= user.firstname
        %td= user.lastname
        - if user.personal_info.nil?
          %td <no co-creator>
          %td <no co-creator>
        - else
          %td= check_mark user.personal_info.newsletter
          %td= @contributions[user.id]

        %td= link_to 'Show', user
        - if false
          %td= link_to 'Edit', edit_user_path(user)
          %td= link_to 'Destroy', user, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New User', new_user_path
