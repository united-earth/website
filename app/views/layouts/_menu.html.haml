.menu
  .ue-container
    = link_to landing_page_path do
      .menu__logo=image_tag 'logo_black.svg' #render 'shared/logo'

    %ul.menu__list
      %li.menu__list_item{ class: ('active' if @at_wiki) }= link_to t('menu.un-application'), un_application_path
      %li.menu__list_item{ class: ('active' if @at_noomap) }= link_to t('menu.noomap'), '/noomap'
      %li.menu__list_item{ class: ('active' if @at_earthdollar) }= link_to t('menu.earthdollar'), '/earthdollar'

    - unless current_user.nil?
      .menu__session
        = link_to '', destroy_user_session_path, class: 'menu__session_logout icon-sign-out'
        = link_to t('menu.settings'), user_settings_path, class: 'menu__session_settings icon-profile'